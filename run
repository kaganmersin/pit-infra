            exec 6>&1
        elif [ $# -ge 2 -a "$2" = "-D" ]; then
            echo $(info "Debug mode enabled")
            export TF_LOG="debug"
            export TERRAGRUNT_DEBUG="true"
            exec 6>&1
        fi
        terragrunt apply --terragrunt-working-dir ./terragrunt/$1 >&6 2>&1
