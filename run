    # Ensure stage and credentials are set
    # if [[ -z "$AWS_ACCESS_KEY_ID" ]]
    # then
    #     echo $error_aws_credentials_missing
    #     exit 1
    if [[ -z "$TF_VAR_stage" ]]
    then
        echo $$error_stage_must_be_defined
        exit 1
    elif [[ -z ${1+x} ]]
    then
        echo $error_working_directory_argument_is_required
        exit 1
    else
        task:envs
